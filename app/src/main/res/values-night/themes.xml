<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mappeoppgave_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryElementBG</item>
        <item name="colorPrimaryVariant">@color/backgroundLighter</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:datePickerStyle">@style/DatePicker</item>
        <item name="android:alertDialogStyle">@style/Dialog</item>
        <item name="android:timePickerStyle">@style/DatePicker</item>
    </style>

    <style name="TableRowElement">
        <item name="android:background">@drawable/tablerow_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="inputFields">
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_width">258dp</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primaryElementBG</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/primaryElementBG</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlActivated">#2196F3</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primaryElementVariant</item>
        <item name="colorPrimaryDark">@color/primaryElementBG</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:timePickerMode">clock</item>
    </style>
    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primaryElementVariant</item>
        <item name="colorPrimaryDark">@color/primaryElementBG</item>
        <item name="colorAccent">@color/white</item>
    </style>
</resources>